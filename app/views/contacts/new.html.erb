<% provide(:banner, "mountainback.jpg") %>
<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h1>Give us a call!</h1>
				<p>If you are interested in learning more, please give us a call anytime at 407-491-8656. If we don't answer, we will get back to you as soon as we can.</p>

				<a href="tel:+14072471768" class="btn btn-large btn-primary">Call now!</a>
		</div>
		<div class="col-sm-6">
			<h1>Shoot us a line!</h1>
			<%= simple_form_for @contact do |f| %>
				<%= f.input :name, :required => true %>
				<%= f.input :email, :required => true %>
				<%= f.input :message, :as => :text, :required => true %>
				<div class="hidden">
					<%= f.input :nickname, :hint => 'Leave this field blank' %>
				</div>
				<div>
					</br>
					<%= f.button :submit, 'Send message', :class => "btn btn-primary" %>
					<div>
					  <% flash.each do |key, value| %>
					    <div>
					      <a href="#" data-dismiss="alert"></a>
					        <%= value %>
					    </div>
					  <% end %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
